@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "PrintRetailBillClientwise";
}

<script type="text/javascript">
    $(document).ready(function () {
        document.getElementById("FromDate").innerHTML = window.opener.document.getElementById("fromdate").value;
        document.getElementById("ToDate").innerHTML = window.opener.document.getElementById("todate").value;
        document.getElementById("SuppName").innerHTML = window.opener.document.getElementById("DDLTypeSupplier").value;
    })

</script>

<table style="border: 1px double; width: 100%;">
    <tr>
        <td>
            <table style="width: 100%">
                <tr>
                    <td colspan="8" style="text-align: center;">
                        <img src="~/Images/sretail.png" class="img-responsive" alt="logo" style="max-width: 400px" />
                    </td>
                </tr>
                <tr>
                    <td colspan="8" style="text-align: center;">
                        <label><b>Shreeji Solitaire, 205, 2nd Floor,</b></label><br />
                        <label>Khadakpada Circle,Kalyan (W),Mumbai - 421 301</label>
                    </td>
                </tr>
                <tr>
                    <td colspan="8" style="text-align: center">
                        <label style="font-size: x-large"><b>Retail Bill Report</b></label>
                    </td>
                </tr>
            </table>
        </td>
    </tr>

    <tr>
        <td>
            <table style="width: 100%">
                <tr>
                    <td style="float: right">
                        <label style="font-weight: bold">Date:</label>&nbsp;&nbsp<label id="FromDate" style="font-weight: normal"></label>&nbsp;&nbsp;To&nbsp;&nbsp;<label id="ToDate" style="font-weight: normal"></label></td>
                </tr>
                <tr>
                    <td>
                        <label style="font-weight: bold">Client Name:</label><label style="font-weight: normal" id="SuppName"></label></td>
                </tr>
            </table>
        </td>
    </tr>

    <tr>
        <td>
            @*<label style="font-weight: bold">&nbsp;Item Details:</label>*@
            <table>
                <tr>
                    <td style="height: 5px"></td>
                </tr>
            </table>
            <table border="1" cellpadding="0" cellspacing="0" style="width: 100%">
                <thead>
                    <tr>
                        <th>S.No.</th>
                        <th style="text-align: left">Retail Bill No.</th>
                        <th style="text-align: left">Client Name</th>
                        <th style="text-align: left">Sales Person Name</th>
                        <th style="text-align: left">Grand Total</th>
                        @*<th style="text-align: left">Delivery At</th>*@
                        <th style="text-align: right">Amount</th>
                    </tr>
                </thead>
                <tbody id="itemlist">
                    @{
                        int rowid = 1;
                    }
                    @foreach (var data in Model.RetailBillList)
                    {
                        <tr>
                            @{
                        double amt = Convert.ToDouble(@data.GrandTotal);
                        var amount = amt.ToString("#,###.00##");
                            }
                            <td>@rowid</td>
                            <td style="text-align: left">@data.RetailBillNo</td>
                            <td style="text-align: left">@data.ClientName</td>
                            <td style="text-align: left">@data.SalesPersonName</td>
                            <td style="text-align: left">@data.GrandTotal</td>
                            @*<td style="text-align: left">@data.DelAt</td>*@
                            <td style="text-align: right">@amount</td>
                            @{rowid += 1;}
                        </tr>
                    }
                </tbody>
            </table>

        </td>
    </tr>
</table>




